<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph"
            app:startDestination="@id/qrContainerFragment">

    <fragment
            android:id="@+id/qrContainerFragment"
            android:name="com.qrist.quicker.qrlist.QRContainerFragment"
            tools:layout="@layout/fragment_qrcontainer">

        <action
                android:id="@+id/action_qr_container_to_servicelist"
                app:enterAnim="@anim/slide_from_bottom"
                app:exitAnim="@anim/stay_out"
                app:popEnterAnim="@anim/stay_in"
                app:popExitAnim="@anim/slide_to_bottom"
                app:destination="@id/serviceListFragment"/>

    </fragment>

    <fragment
            android:id="@+id/serviceListFragment"
            android:name="com.qrist.quicker.servicelist.ServiceListFragment"
            tools:layout="@layout/fragment_servicelist">

        <action
                android:id="@+id/action_servicelist_to_register"
                app:enterAnim="@anim/slide_from_right"
                app:exitAnim="@anim/stay_out"
                app:popEnterAnim="@anim/stay_in"
                app:popExitAnim="@anim/slide_to_right"
                app:destination="@id/registerFragment"
                app:popUpTo="@id/serviceListFragment"
                app:popUpToInclusive="true"/>

    </fragment>

    <fragment
            android:id="@+id/registerFragment"
            android:name="com.qrist.quicker.register.RegisterFragment"
            tools:layout="@layout/fragment_register">
        <argument
                android:name="serviceName"
                app:argType="string"/>
        <argument
                android:name="serviceIconUrl"
                app:argType="string"/>
    </fragment>

</navigation>